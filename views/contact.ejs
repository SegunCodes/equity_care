 <!--page-title-area start-->
 <section class="page-title-area" style="background-image: url(assets/img/img5.jpg);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6">
                <div class="page-title-wrapper">
                    <div class="page-title-inner contact-title-inner">
                        <div class="page-title-inner-content theme-bg">
                            <div class="page-title">
                                <h1 class="main-page-title">Contact Us</h1>
                            </div>
                            <ul class="breadcrumb-list">
                                <li><a href="/">Home <i class="far fa-chevron-right"></i></a></li>
                                <li><a href="#">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--page-title-area end-->
<!--contact-details-area start-->
<section class="contact-details-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-4 col-md-4">
                <div class="section-title text-left mb-15 mt-20">
                    <h6 class="mb-20"><i class="far fa-plus"></i> Get In Touch</h6>
                    <h2>Discuss 
                        With Us</h2>
                </div>
                <div class="details__social contact__social mb-45">
                    <a target="_blank" rel="noopener" href="https://web.facebook.com/profile.php?id=61551824697931"><i class="fab fa-facebook-f"></i></a>
                    <a target="_blank" rel="noopener" href="https://twitter.com/EQUITYCARE2023"><i class="fab fa-twitter"></i></a>
                    <a target="_blank" rel="noopener" href="https://www.instagram.com/equitycareglobal/"><i class="fab fa-instagram"></i></a>
                    <a target="_blank" rel="noopener" href="https://www.linkedin.com/in/equity-care-global-6a699a288/"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
            <div class="col-xl-8 col-lg-8 col-md-8">
                <div class="contact-form-area post-form-area contact-details-form mb-30 mt-20">
                    <% if (locals.message) { %> 
                        <div class="text-success" style="margin-left: 40px;">
                            <%= locals.message %> 
                        </div>
                    <% } %>
                    <% if (locals.error) { %>
                        <div class="text-danger" style="margin-left: 40px;">
                            <%= locals.error %>
                        </div>
                    <% } %>
                    <form class="service-input-form" action="/message" method="post">
                        <div class="row no-gutters">
                            <div class="col-xl-6">
                                <div class="input-area input-name">
                                    <input type="text" name="fname" class="form-control" placeholder="Your First Name">
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="input-area">
                                    <input type="text" name="lname" class="form-control" placeholder="Your Last Name">
                                </div>
                            </div>
                            <div class="col-xl-12">
                                <div class="input-area input-email">
                                    <input type="email" name="email" class="form-control" placeholder="Your Email">
                                </div>
                            </div>
                            <div class="col-xl-12">
                                <div class="input-message mb-20">
                                    <textarea name="message" id="message" cols="30" rows="10"
                                        placeholder="Message"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="submit-btn submit-lg-btn2">
                                    <button class="theme_btn">Send Message <i class="fal fa-long-arrow-right"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--contact-details-area end-->
